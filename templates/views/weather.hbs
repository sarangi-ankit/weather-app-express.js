<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlink}}
</head>
<body>
    {{>navbar}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
           <div class="col-md-10 col-12 mx-auto">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id ="cityName" placeholder="enter the city" autocomplete="off">
                        <input type="submit" value="search" id="submitButton">

                    </form>
                    <div class="tempInformation">
                        <div class="top_layer">
                            <p id="day">created by ankit</p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">get output here</p>
                            <div class="middle_layer data_hide">
                                <p id="temp"><span id="temp_val"></span> <sup></sup></p>

                            </div>
                            <div class="bottom_layer">
                                <p id="temp_status"></p>
                            </div>
                        </div>
                    </div>
                </div>
           </div>
        </div>
    </div>

    <!-- footer section -->
    {{>footer}}
    <script src="js/main.js"></script>
    
</body>
</html> 